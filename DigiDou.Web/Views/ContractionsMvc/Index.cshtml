@section scripts
{
     <script src="~/Scripts/Custom.js"></script>
    <script>
        $('.stopwatch').click(function () {
            var stopwatch = $(this);
            var clickText = stopwatch.attr('onClick');
            console.log(clickText);
            //$.ajax({
            //    method: "POST",
            //    url: "/ContractionsMvc/StartTime",
            //})
            switch(clickText){
                case "Stopwatch.start();":
                    stopwatch.attr('onClick', 'Stopwatch.stop();');
                    break;
                case "Stopwatch.stop();":
                    stopwatch.attr('onClick', 'Stopwatch.start();');
                    break;
            }
        });

    </script>
}
