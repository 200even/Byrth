@model IEnumerable<DigiDou.Web.Models.Contraction>

@{
    ViewBag.Title = "Index";
}

<h2>Contraction Timer</h2>
<div>
    <div class="col-md-5 col-md-offset-4"><button class="stopwatch" onClick="Stopwatch.start();">00:00:00</button></div>
    <div class="col-md-offset-4">
        <a href="#" id="start" class="button btn-lg btn-success" onClick="Stopwatch.start();">Start</a>
        <a href="#" id="lap" class="button btn-lg btn-primary" onClick="Stopwatch.lap();">Lap</a>
        <a href="#" id="stop" class="button btn-lg btn-danger" onClick="Stopwatch.stop();">Stop</a>
        <a href="#" id="restart" class="button btn-lg btn-default" onClick="Stopwatch.restart();">Restart</a>
    </div>
    
    <table class="table panel results"></table>
</div>
