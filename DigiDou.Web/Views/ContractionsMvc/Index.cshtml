@section scripts
{
    <script src="~/Scripts/Custom.js"></script>
    <script>
        $('.stopwatch').click(function () {
            var timer = $(this);
            if (timer.prop('value') == 'stopped') {
                Stopwatch.start();
                timer.prop('value', 'started');
                $.ajax({
                    method: "POST",
                    url: "/ContractionsMvc/StartTime",
                })
            }
            else {
                Stopwatch.stop();
                Stopwatch.lap();
                timer.prop('value', 'stopped');
                $.ajax({
                    method: "POST",
                    url: "/ContractionsMvc/EndTime",
                })
            }
        });

    </script>
}
