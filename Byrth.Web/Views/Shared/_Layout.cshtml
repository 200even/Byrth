<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Byrth", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index", "Home")"><i class="visible-xs-inline glyphicon glyphicon-home"></i> Home</a></li>
                    <li><a href="@Url.Action("Index", "SMS")"><i class="visible-xs-inline glyphicon glyphicon-envelope"></i> Scheduled SMS</a></li>
                    <li><a href="@Url.Action("Index", "Contractions")"><i class="visible-xs-inline glyphicon glyphicon-time"></i> Contraction Timer</a></li>
                    <li><a href="@Url.Action("Index", "Hospitals")"><i class="visible-xs-inline glyphicon glyphicon-header"></i> Hospital</a></li>
                    <li><a href="@Url.Action("Index", "Contacts")"><i class="visible-xs-inline glyphicon glyphicon-user"></i> Contacts</a></li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">


        @if (TempData["success"] != null)
        {
            <br />
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>Success!</strong> @TempData["success"]
            </div>

        }

        @if (TempData["error"] != null)
        {
            <br />
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>Success!</strong> @TempData["error"]
            </div>

        }

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Byrth</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>


              
    
