@model Byrth.Core.Hospital

@{
    ViewBag.Title = "Index";
}
<br/>
<h2 align="center">Your Hospital</h2>

<div class="panel col-md-offset-4 col-md-4" style="float:none">
    <address align="center">
        
        <strong>
            @Html.DisplayFor(model => model.Name)
        </strong><br/>
            @Html.DisplayFor(model => model.Address)
        <br>
            @Html.DisplayFor(model => model.City)
        <br>
            @Html.DisplayFor(model => model.State)
        <br>
            @Html.DisplayFor(model => model.Zipcode)
        <br>
        <abbr title="Phone">P:</abbr> <a href="tel: @Model.Phone">@Html.DisplayFor(model => model.Phone)</a>
